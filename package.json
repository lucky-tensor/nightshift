{
    "name": "dark-factory",
    "version": "0.1.0",
    "description": "Autonomous AI Agent Orchestration Plugin for OpenCode",
    "type": "module",
    "main": "./dist/index.js",
    "exports": {
        ".": "./dist/index.js"
    },
    "private": true,
    "bin": {
        "dark-factory": "./dist/cli.js"
    },
    "scripts": {
        "build": "bun build ./src/plugin/index.ts --outdir ./dist --target node --packages bundle",
        "build:cli": "bun build ./src/cli.tsx --outfile ./dist/cli.js --target node --packages bundle",
        "start": "bun src/cli.tsx",
        "dev": "bun build ./src/plugin/index.ts --outdir ./dist --target node --packages bundle --watch",
        "dev:install": "./scripts/dev-install.sh",
        "test": "bun test",
        "lint": "bunx eslint src/",
        "format": "bunx prettier --write \"src/**/*.ts\"",
        "format:check": "bunx prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "prototype:diff-brain": "bun run prototypes/diff-brain/prototype.ts",
        "prototype:code-index": "bun run prototypes/code-index/prototype.ts",
        "prototype:multi-agent": "bun run prototypes/multi-agent/prototype.ts",
        "prototype:blackboard": "bun run prototypes/blackboard/prototype.ts",
        "prototype:demo": "bun run prototypes/demo.ts",
        "prototype:all": "bun run prototype:diff-brain && echo '---' && bun run prototype:code-index && echo '---' && bun run prototype:multi-agent && echo '---' && bun run prototype:blackboard && echo '---' && bun run prototype:demo"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/bun": "latest",
        "@types/ink": "^0.5.2",
        "@types/meow": "^5.0.0",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@types/uuid": "^11.0.0",
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.50.1",
        "eslint": "^9.39.2",
        "prettier": "^3.7.4"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@opencode-ai/plugin": "^1.0.204",
        "@opencode-ai/sdk": "^1.0.203",
        "chalk": "^5.6.2",
        "dotenv": "^17.2.3",
        "glob": "^13.0.0",
        "ink": "^6.6.0",
        "ink-big-text": "^2.0.0",
        "ink-gradient": "^3.0.0",
        "ink-select-input": "^6.2.0",
        "ink-spinner": "^5.0.0",
        "ink-text-input": "^6.0.0",
        "meow": "^14.0.0",
        "opencode-google-antigravity-auth": "^0.2.11",
        "react": "^19.2.3",
        "react-devtools-core": "^6.1.5",
        "uuid": "^13.0.0",
        "yaml": "^2.8.2"
    }
}
